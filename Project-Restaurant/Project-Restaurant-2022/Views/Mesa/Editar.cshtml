@model MesaEditarViewModel
@{
    var mesas = ViewBag.Mesas as List<string>;
    mesas.Add(string.Empty);

    var selectDasMesas = new SelectList(mesas, string.Empty);
}


<div class="col-lg-6 col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Edição das Mesas - @Model.NumeroMesa</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form asp-action="Editar" method="POST">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-row">
                        <div class="form-group mb-2">
                            <div class="form-group mb-2">
                                <label asp-for="NumeroMesa">Numero Mesa</label>
                                <input type="text" asp-for="NumeroMesa" class="form-control">
                                <span asp-validation-for="NumeroMesa" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                                    <label asp-for="Status">Status</label>
                                <div class="form-check">
                                    <input type="radio" id="EdiçãoMesaStatusDesocupado" name="Status" class="form-check-input" value="0" checked="checked" />
                                    <label class="form-check-label" for="EdiçãoMesaStatusDesocupado">Desocupado</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" id="EdiçãoMesaStatusOcupado" name="Status" class="form-check-input" value="1" />
                                    <label class="form-check-label" for="EdiçãoMesaStatusOcupado">Ocupado</label>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-danger mr-2"><i class="ft-check-square mr-1"></i>Salvar</button>
                        <button type="button" class="btn btn-warning"><i class="ft-x mr-1"></i>Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>