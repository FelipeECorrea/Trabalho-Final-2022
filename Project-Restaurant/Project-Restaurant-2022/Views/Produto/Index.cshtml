@model List<Produto>

<p class="h3">Lista de Produtos</p>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="cadastrar" class="btn btn-danger">
            <i class="ft-plus-square"></i> Cadastrar
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
    <!-- Cabeçalho da tabela-->
    <tr>
        <!-- Linha da tabela-->
        <th>Nome</th> <!-- Coluna específica do cabeçalho-->
        <th>Valor</th>
        <th>Status</th>
        <th>Descrição</th>
        <th>Ação</th>
    </tr>
    </thead>
    <tbody>
    <!-- Lugar dos registros da tabela-->
    @foreach (var produto in Model)
    {
        <tr>
            <!-- Linha-->
            <td>@produto.Nome</td> <!-- Coluna específica para body-->
            <td>@produto.Valor</td>
                @if (produto.Status == Repositorio.Enums.StatusProduto.Disponivel)
                {
                    <td><span class="badge badge-success">@produto.Status</span></td>

                }
                else
                {
                    <td><span class="badge badge-danger">@produto.Status</span></td>
                }

            <td>@produto.Descricao</td>
            <td>
                <a class="btn btn-warning" asp-action="editar" asp-route-id="@produto.Id">
                    <i class="fa-solid ft-edit"></i> Editar
                </a>
                <a class="btn btn-outline-danger" asp-action="apagar" asp-route-id="@produto.Id">
                    <i class="fa-solid ft-trash"></i> Apagar
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>