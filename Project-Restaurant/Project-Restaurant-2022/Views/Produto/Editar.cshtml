@model ProdutoEditarViewModel
@{
    var produtos = ViewBag.Produtos as List<string>;
    produtos.Add(string.Empty);
    
    var selectDosProdutos = new SelectList(produtos, string.Empty);
}

<div class="col-lg-6 col-12">
