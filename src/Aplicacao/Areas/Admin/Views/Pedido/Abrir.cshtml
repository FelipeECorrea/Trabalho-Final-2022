@model PedidoCadastrarViewModel

<div class="col-lg-6 col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Cadastro de Pedido</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form asp-action="Abrir" method="POST">
                    <div>

                        @*INICIO DO SELECT*@
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group mb-2">
                                    <label asp-for="ClienteId" class="form-label"></label>
                                    <select asp-for="ClienteId" class="form-select"></select>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="form-group mb-2">
                                    <label asp-for="MesaId" class="form-label"></label>
                                    <select asp-for="MesaId" class="form-select"></select>
                                </div>
                            </div>
                        </div>
                        @*FIM DO SELECT*@

                        <div class="col-md-12">
                            <div class="form-group mb-2">
                                <label asp-for="Observacao"></label>
                                <textarea id="basic-form-9" rows="4" asp-for="Observacao" class="form-control"></textarea>
                                <span asp-validation-for="Observacao" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-danger mr-2"><i class="ft-plus-square"></i>Confirmar</button>
                    <button type="button" class="btn btn-warning"><i class="ft-x mr-1"></i>Adicionar Produto</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/pedido/pedido-select2.js"></script>
}