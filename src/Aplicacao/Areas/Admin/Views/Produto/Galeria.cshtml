@using Aplicacao.01_Domain.Servico.Helpers
@using Servico.Helpers
@model IList<Produto>

@{
    var caminhoServidor = ViewBag.CaminhoServidor;
}

<div class="row">
    <div class="col-12">
        <h4 class="h4 text-center text-primary">Galeria de Produtos</h4>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var produto in Model)
    {
        <div class="col">
            <div class="card">
                <img src="@(string.IsNullOrEmpty(produto.ProdutoCaminho) || !File.Exists(ArquivoHelper.ObterCaminhoArquivoServico(produto.ProdutoCaminho, caminhoServidor))
                              ? "/images/"
                              : $"/{ArquivoHelper.ObterCaminhoArquivo(produto.ProdutoCaminho)}")" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@($"{produto.Nome} {produto.Nome}")</h5>
                    <p class="card-text"><span class="fw-bold">Valor: </span> @produto.Valor</p>
                    <p class="card-text"><span class="fw-bold">Categoria: </span> @produto.Categoria</p>
                    <p class="card-text"><span class="fw-bold">Descrição: </span> @produto.Descricao</p>
                  
                </div>
            </div>
        </div>
    }
</div>