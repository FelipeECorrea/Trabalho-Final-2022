@model List<Mesa>

<link rel="stylesheet" type="text/css" href="~/css/style.css" />

<p class="h3">Lista de Mesas</p>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="cadastrar" class="btn btn-primary">
            <i class="ft-plus-square"></i> Cadastrar
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <section>
        <div class="row">

            <!-- Lugar dos registros da tabela-->
            @foreach (var mesa in Model)
            {
                @if (mesa.Status == Repositorio.Enums.StatusMesa.Desocupado)
                {
            <div class="p-3">
                <div>
                    <div class="card card-inverse bg-success">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="media">
                                    <div class="media-body text-left">
                                        <h3 class="card-text">@mesa.NumeroMesa</h3>
                                        <span>@mesa.Status</span>
                                    </div>
                                    <div class="media-right align-self-center">
                                        <i class="icon-cup font-large-2 float-right"></i>
                                    </div>
                                </div>
                                        <a class="badge badge-pill badge-danger mb-1 mr-2" asp-action="apagar" asp-route-id="@mesa.Id">
                                    <i class="fa-solid ft-trash"></i> Apagar
                                </a>
                                        <a class="badge badge-pill badge-warning mb-1 mr-2" asp-action="editar" asp-route-id="@mesa.Id">
                                    <i class="fa-solid ft-edit"></i> Editar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                }
                else
                {
            <div class="p-3">
                <div>
                    <div class="card card-inverse bg-danger">
                        <div class="card-content">
                            <div class="card-body">
                                <div class="media">
                                    <div class="media-body text-left">
                                        <h3 class="card-text">@mesa.NumeroMesa</h3>
                                        <span>@mesa.Status</span>
                                    </div>
                                    <div class="media-right align-self-center">
                                        <i class="icon-cup font-large-2 float-right"></i>
                                    </div>
                                </div>
                                <a class="badge badge-pill badge-primary mb-1 mr-2" asp-action="editar" asp-route-id="@mesa.Id">
                                    <i class="fa-solid ft-edit"></i> Editar
                                </a>
                                <a class="badge badge-pill badge-dark mb-1 mr-2" asp-action="apagar" asp-route-id="@mesa.Id">
                                    <i class="fa-solid ft-trash"></i> Apagar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                }
            }
    </div>
    </section>
</table>