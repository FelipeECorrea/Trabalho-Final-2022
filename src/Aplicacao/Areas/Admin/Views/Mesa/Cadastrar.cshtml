@model MesaCadastrarViewModel

<div class="col-lg-6 col-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Cadastro de Mesas</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form asp-action="Cadastrar" method="POST">
                    <div class="form-row">
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label asp-for="NumeroMesa">Numero de Mesa</label>
                                <input type="text" asp-for="NumeroMesa" class="form-control">
                                <span asp-validation-for="NumeroMesa" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-outline-danger" asp-action="Index"><i class="ft-x mr-1"></i>Cancelar</a>
                    <button type="submit" class="btn btn-warning mr-2"><i class="ft-check-square mr-1"></i>Salvar</button>
                </form>
            </div>
        </div>
    </div>
</div>