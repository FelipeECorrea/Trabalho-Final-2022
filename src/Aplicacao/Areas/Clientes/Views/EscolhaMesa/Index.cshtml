    ======================================================== -->
</head>

<section>
    <a class="h3 position-absolute top-1 start-50 translate-middle">Escolha sua Mesa</a>
    <div class="row menu-container aos-init aos-animate">
        <!-- Lugar dos registros da tabela-->
        @foreach (var mesa in Model)
        {
            @if (mesa.Status == Repositorio.Enums.StatusMesa.Desocupado)
            {
                <div class="col-lg-3 p-3 menu-item filter-starters border-0">
                    <div>
                        <a class="btn btn-success border-0" asp-controller="Cardapio" asp-action="MesaEscolhida" asp-route-id="@mesa.Id">

                            <div class="card card-inverse bg-success border-0">
                                                    <div class="card-content">
                                              <div class="card-body">
                                         <div class="media">
                                             <div class="media-body text-left">
                                                 <h3 class="card-text">@mesa.NumeroMesa</h3>
                                                 <span>@mesa.Status</span>
                                             </div>
                                         </div>
                                     </div>
                                  </div>
                               </div>
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="p-3 border-0">
                    <div>
                        <div class="card card-inverse bg-danger border-0">
                            <div class="card-content border-0">
                                <div class="card-body border-0">
                                    <div class="media border-0">
                                        <div class="media-body text-left border-0">
                                            <h3 class="card-text">@mesa.NumeroMesa</h3>
                                            <span>@mesa.Status</span>
                                        </div>
                                        <div class="media-right align-self-center border-0">
                                            <i class="icon-cup font-large-2 float-right"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</section>

<script src="~/TemaPublic/assets/vendor/aos/aos.js"></script>
<script src="~/TemaPublic/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/TemaPublic/assets/vendor/glightbox/js/glightbox.min.js"></script>
<script src="~/TemaPublic/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
<script src="~/TemaPublic/assets/vendor/swiper/swiper-bundle.min.js"></script>
<script src="~/TemaPublic/assets/vendor/php-email-form/validate.js"></script>

