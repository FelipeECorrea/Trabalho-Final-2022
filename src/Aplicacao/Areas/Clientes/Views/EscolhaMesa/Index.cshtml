@using Repositorio.Entidades
@model List<Mesa>

<link rel="stylesheet" type="text/css" href="~/css/style.css" />

<p class="h3">Escolha sua Mesa</p>


<table class="table table-striped table-bordered">
    <section>
        <div class="row">

            <!-- Lugar dos registros da tabela-->
            @foreach (var mesa in Model)
            {
                @if (mesa.Status == Repositorio.Enums.StatusMesa.Desocupado)
                {
                    <div class="p-3">
                        <div>
                            <div class="card card-inverse bg-success">
                                <div class="card-content">
                                    <div class="card-body">
                                        <div class="media">
                                            <div class="media-body text-left">
                                                <h3 class="card-text">@mesa.NumeroMesa</h3>
                                                <span>@mesa.Status</span>
                                            </div>
                                            <div class="media-right align-self-center">
                                                <i class="icon-cup font-large-2 float-right"></i>
                                            </div>
                                        </div>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="p-3">
                        <div>
                            <div class="card card-inverse bg-danger">
                                <div class="card-content">
                                    <div class="card-body">
                                        <div class="media">
                                            <div class="media-body text-left">
                                                <h3 class="card-text">@mesa.NumeroMesa</h3>
                                                <span>@mesa.Status</span>
                                            </div>
                                            <div class="media-right align-self-center">
                                                <i class="icon-cup font-large-2 float-right"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </section>
</table>