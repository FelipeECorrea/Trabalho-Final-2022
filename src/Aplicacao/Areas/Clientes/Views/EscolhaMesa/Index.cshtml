    <!-- Vendor CSS Files -->
    <link href="~/TemaPublic/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/TemaPublic/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/TemaPublic/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
