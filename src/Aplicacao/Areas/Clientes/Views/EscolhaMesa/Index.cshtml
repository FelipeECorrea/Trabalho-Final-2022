@using Repositorio.Entidades
@model List<Mesa>

@{
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Dev Lanches</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/TemaPublic/assets/img/favicon.png" rel="icon">
    <link href="~/TemaPublic/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
